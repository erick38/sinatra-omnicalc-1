

 <h1>
  Random Results
</h1>

<dl>
  <dt>
    Minimum
  </dt>
  <dd>
    0.0 <%= params.fetch('user_min') %>
  </dd>

  <dt>
    Maximum
  </dt>
  <dd>
    0.0 <%= params.fetch('user_max') %>
  </dd>

  <dt>
    Random Number
  </dt>
  <dd>
    <%= 
      min = params.fetch('user_min').to_f
      max = params.fetch('user_max').to_f
      rand(min..max)
    %>
  </dd>
</dl>

